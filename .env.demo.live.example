# Live demo profile (external dependency on Monad RPC and on-chain payment checks)
ALLOW_FREE_JOIN=false
REQUIRE_API_KEY=true
# Set at runtime (do NOT commit secrets): export WORLD_API_KEY='...'
# Intentionally not set here to avoid overriding shell env.
API_KEY_HEADER_NAME=X-API-Key
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SEC=60
DEBUG_ENDPOINTS_ENABLED=false
DEMO_BASE_URL=http://127.0.0.1:8011

# Required when ALLOW_FREE_JOIN=false

# Monad mainnet (required for submission)
MONAD_CHAIN_ID=143
MONAD_RPC_URL=https://rpc.monad.xyz

# Treasury that receives entry payments (mainnet address)
MONAD_TREASURY_ADDRESS=0x833dD2b2c4085674E57B058126DD59235D893a2e

# 0.01 MON minimum entry fee (adjust if needed)
MIN_ENTRY_FEE_WEI=10000000000000000
